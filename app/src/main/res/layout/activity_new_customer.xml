<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCustomerActivity">

    <TextView
        android:id="@+id/TitleCusLog"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="#E1E3EC"
        android:text="HelpMe"
        android:textAlignment="center"
        android:textSize="45dp"
        android:textStyle="bold|normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="60dp" />




        <EditText
            android:id="@+id/phone_num"
            android:layout_width="250dp"
            android:layout_height="66dp"
            android:hint="Phone number"
            android:background="@drawable/edit_round"
            android:shadowColor="@android:color/white"
            android:inputType="phone"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    <EditText
        android:id="@+id/prefix"
        android:layout_width="80dp"
        android:layout_height="66dp"
        android:hint="+1"
        android:background="@drawable/edit_round"
        android:shadowColor="@android:color/white"
        android:inputType="phone"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/phone_num"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/verify_edit_text"
        android:layout_width="327dp"
        android:layout_height="66dp"
        android:layout_below="@id/phone_num"
        android:background="@drawable/edit_round"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Verification Code"
        android:layout_centerInParent="true"
        android:inputType="numberPassword"
        android:shadowColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/send_verification_code_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button_round"
        android:layout_marginTop="10dp"
        android:layout_below="@id/verify_edit_text"
        android:text="SEND VERIFICATION CODE" />

    <Button
        android:id="@+id/verify_code_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button_round"
        android:layout_marginTop="10dp"
        android:layout_below="@id/verify_edit_text"
        android:text="VERIFY CODE" />

    <TextView
        android:id="@+id/message_to_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_verification_code_btn"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="A Verification Code will be sent\nto your phone number"/>

    <ProgressBar
        android:id="@+id/progress_bar_phone_num"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"/>



</RelativeLayout>
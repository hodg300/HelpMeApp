<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerLogIn">

    <TextView
        android:id="@+id/TitleCusLog"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#E1E3EC"
        android:text="HelpMe"
        android:textAlignment="center"
        android:textSize="45dp"
        android:textStyle="bold|normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="60dp" />




    <EditText
        android:id="@+id/phone_num"
        android:layout_width="250dp"
        android:layout_height="66dp"
        android:hint="Phone number"
        android:background="@drawable/edit_round"
        android:shadowColor="@android:color/white"
        android:inputType="phone"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/phone_num"
        android:layout_centerInParent="true"
        />

    <EditText
        android:id="@+id/codeText"
        android:layout_width="250dp"
        android:layout_height="66dp"
        android:hint="Verification Code"
        android:background="@drawable/edit_round"
        android:shadowColor="@android:color/white"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_below="@id/phone_num"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/send_verification_Btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button_round"
        android:layout_marginTop="10dp"
        android:layout_below="@id/codeText"
        android:text="SEND VERIFICATION" />

    <Button
        android:id="@+id/verify_code_Btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button_round"
        android:layout_marginTop="10dp"
        android:layout_below="@id/codeText"
        android:text="VERIFY CODE" />

    <ProgressBar
        android:id="@+id/progress_bar_phone_num"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"/>



</RelativeLayout>